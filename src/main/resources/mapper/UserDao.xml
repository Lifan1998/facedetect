<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.face.dao.UserDao">

    <resultMap type="com.example.face.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="moblie" column="moblie" jdbcType="INTEGER"/>
        <result property="addtime" column="addTime" jdbcType="TIMESTAMP"/>
        <result property="updatetime" column="updateTime" jdbcType="TIMESTAMP"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, username, password, moblie, addTime, updateTime, email
        from face.user
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="queryByEmail" resultMap="UserMap">
        select
          id, username, password, moblie, addTime, updateTime, email
        from face.user
        where email = #{email}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          id, username, password, moblie, addTime, updateTime, email
        from face.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          id, username, password, moblie, addTime, updateTime, email
        from face.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="moblie != null">
                and moblie = #{moblie}
            </if>
            <if test="addtime != null">
                and addTime = #{addtime}
            </if>
            <if test="updatetime != null">
                and updateTime = #{updatetime}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into face.user(username, password, moblie, addTime, updateTime, email)
        values (#{username}, #{password}, #{moblie}, #{addtime}, #{updatetime}, #{email})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update face.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="moblie != null">
                moblie = #{moblie},
            </if>
            <if test="addtime != null">
                addTime = #{addtime},
            </if>
            <if test="updatetime != null">
                updateTime = #{updatetime},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from face.user where id = #{id}
    </delete>

</mapper>