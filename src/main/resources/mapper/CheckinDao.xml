<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.face.dao.CheckinDao">

    <resultMap type="com.example.face.entity.Checkin" id="CheckinMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="classId" column="class_id" jdbcType="INTEGER"/>
        <result property="teacherId" column="teacher_id" jdbcType="INTEGER"/>
        <result property="addTime" column="add_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CheckinMap">
        select
          *

        from face.checkin
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CheckinMap">
        select
          id, class_id, teacher_id, add_time, update_time
        from face.checkin
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CheckinMap">
        select
          id, class_id, teacher_id, add_time, update_time
        from face.checkin
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="classId != null">
                and class_id = #{classId}
            </if>
            <if test="teacherId != null">
                and teacher_id = #{teacherId}
            </if>
            <if test="addTime != null">
                and add_time = #{addTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryByTeacherIdAndClassId" resultMap="CheckinMap">
        select
        id, class_id, teacher_id, add_time, update_time
        from face.checkin
        <where>
            class_id = #{classId}
            and teacher_id = #{teacherId}
        </where>
        order by update_time desc
    </select>


    <!--查询指定行数据-->
    <select id="queryAllByLimitOrderByAddTime" resultMap="CheckinMap">
        select
          id, class_id, teacher_id, add_time, update_time
        from face.checkin
        order by add_time desc
        limit #{offset}, #{limit}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into face.checkin(class_id, teacher_id, add_time, update_time)
        values (#{classId}, #{teacherId}, #{addTime}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update face.checkin
        <set>
            <if test="classId != null">
                class_id = #{classId},
            </if>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="addTime != null">
                add_time = #{addTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from face.checkin where id = #{id}
    </delete>

</mapper>